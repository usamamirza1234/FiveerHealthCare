<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:padding="5dp"
            android:layout_marginTop="-25dp"
            android:layout_below="@id/imv"
            android:background="@drawable/ic_rect_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lay_treatment_item_txvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:gravity="center"
                android:text="1. Name"
                android:textColor="@color/black_app2"
                android:textSize="@dimen/fontsize_mini"
                 />

        </RelativeLayout>
        <ImageView
            android:id="@+id/imv"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_medical_heart"/>
    </RelativeLayout>

</RelativeLayout>