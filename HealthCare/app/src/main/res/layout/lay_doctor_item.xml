<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:id="@+id/lay_doctor_item_rlbg"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shp_rect_rounded_white"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_doctor_rect">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_person" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="start"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Name"
                    android:textColor="@color/black_app"
                    android:textSize="@dimen/fontsize_medium" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="start"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Pediaticain"
                    android:textColor="@color/black_app"
                    android:textSize="@dimen/fontsize_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="start"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="5.23km/ 33 mint"
                    android:textColor="@color/black_app"
                    android:textSize="@dimen/fontsize_small" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="start"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Lorem ipsum dolor sit GB  USA"
                    android:textColor="@color/black_app"
                    android:textSize="@dimen/fontsize_small" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">


                <RatingBar
                    android:id="@+id/frag_slct_package_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:clickable="false"
                    android:isIndicator="true"
                    android:rating="4"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:theme="@style/RatingBar" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="start"
                        android:text="Book Now"
                        android:textColor="@color/red_app"
                        android:textSize="@dimen/fontsize_small" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/red_app" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>