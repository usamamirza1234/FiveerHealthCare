<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_ellipse" />

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Health"
                        android:textColor="@color/green_app"
                        android:textSize="@dimen/fontsize_xxxlarge" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Care"
                        android:textColor="@color/orange_app"
                        android:textSize="@dimen/fontsize_xxxlarge" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Care at Your door step"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fontsize_large" />


                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="5dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="First Name"
                            android:textColor="@color/black_app"
                            android:textSize="@dimen/fontsize_small" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shp_rect_rounded_gray_mini">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edttext_height_medium"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:cursorVisible="true"
                                android:inputType="textPersonName"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:text=""
                                android:textColor="@color/orange_app"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/fontsize_small" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="5dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="Last Name"
                            android:textColor="@color/black_app"
                            android:textSize="@dimen/fontsize_small" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shp_rect_rounded_gray_mini">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edttext_height_medium"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:cursorVisible="true"
                                android:inputType="textPersonName"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:text=""
                                android:textColor="@color/orange_app"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/fontsize_small" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Email"
                        android:textColor="@color/black_app"
                        android:textSize="@dimen/fontsize_small" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shp_rect_rounded_gray_mini">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edttext_height_medium"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:cursorVisible="true"
                            android:inputType="textEmailAddress"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:text=""

                            android:textColor="@color/orange_app"
                            android:textColorHint="@color/orange_app"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/fontsize_small" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Password"
                        android:textColor="@color/black_app"
                        android:textSize="@dimen/fontsize_small" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shp_rect_rounded_gray_mini">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edttext_height_medium"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:cursorVisible="true"
                            android:inputType="textPassword"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:text=""

                            android:textColor="@color/orange_app"
                            android:textColorHint="@color/orange_app"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/fontsize_small" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="I Accept the Policy and Terms"
                        android:textColor="@color/black_app"
                        android:textSize="@dimen/fontsize_tiny" />
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/frg_signup_rlGetStarted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/shp_rect_rounded_orange_small">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:text="Sign Up"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fontsize_mini"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/frg_signup_imvgoogle"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_google" />

                    <ImageView
                        android:id="@+id/frg_signup_imvlnd"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_link" />

                    <ImageView
                        android:id="@+id/frg_signup_imvtwiter"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_twitter" />

                    <ImageView
                        android:id="@+id/frg_signup_imvfb"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_facebook" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Already have an Account?"
                        android:textColor="@color/black_app"
                        android:textSize="@dimen/fontsize_tiny" />

                    <TextView
                        android:id="@+id/frg_signup_txvLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" Login"
                        android:textStyle="bold"
                        android:textColor="@color/purple_app"
                        android:textSize="@dimen/fontsize_small" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
