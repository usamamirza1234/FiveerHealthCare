<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lay_treatment_item_llbg"
        android:background="@drawable/shp_rect_rounded_light_blue_small"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="80"
            android:orientation="vertical">


            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/lay_treatment_item_txvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="1. Name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/lay_treatment_item_txvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Popular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontsize_mini" />

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="20"
            android:background="@drawable/ic_home_item_bg"
            android:gravity="center">

            <ImageView
                android:id="@+id/lay_treatment_item_imv"
                android:layout_width="100dp"
                android:layout_height="80dp"


                android:scaleType="centerInside"
           />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>